import openai

import time

# Set the text to display
text = "Welcome to Sandeep Tech's Hacking Server"

# Set the speed of the text (in seconds)
speed = 0.001

# Set the color of the text
color = "\033[1;32m" # 31 = red, 32 = green, 33 = yellow, 34 = blue, 35 = purple, 36 = cyan

# Loop to display the text
for i in range(len(text)):
    print(color + text[i] + "\033[0m", end="")
    time.sleep(speed)

print()

print() # add a blank line after chatbot's response

from colorama import init, Fore

init() # Initialize colorama

openai.api_key = "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"

while True:
    model = "text-davinci-003"
    user = input("Ask to Sandeep Tech: ")

    if "exit" in user:
        break

    completion = openai.Completion.create(
        model="text-davinci-003",
        prompt=user,
        max_tokens=1024,
        temperature=0.5,
        n=1,
        stop=None
    )

    response = completion.choices[0].text

    print(Fore.BLUE + "Reply From Sandeep Tech: " + Fore.RESET + response)
    print() # add a blank line after chatbot's response

print() # add a blank line after chatbot's response
